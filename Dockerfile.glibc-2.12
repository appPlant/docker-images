FROM centos:6
MAINTAINER Sebastian Katzer "katzer@appplant.de"

# libs
RUN yum  -y update && yum -y groupinstall "Development Tools" && yum -y install epel-release centos-release-scl && yum -y install \
            clang clang-devel \
            curl \
            devtoolset-4-binutils \
            devtoolset-4-gcc \
            glibc-devel glibc-devel.i686 \
            libgcc libgcc.i686 \
            openssh-clients \
            openssh-server \
            tar && \
    yum  -y clean all
ENV PATH /opt/rh/devtoolset-4/root/usr/bin:$PATH

# ruby
RUN mkdir -p /opt/ruby-2.3.0/ && \
    curl -s https://s3.amazonaws.com/pkgr-buildpack-ruby/current/centos-6/ruby-2.3.0.tgz | tar xzC /opt/ruby-2.3.0/
ENV PATH /opt/ruby-2.3.0/bin:$PATH
RUN echo "gem: --no-document" > ~/.gemrc && \
    gem install rake bundler --force

# sshd
RUN    mkdir -p $HOME/.ssh \
    && service sshd start \
    && ssh-keygen -t rsa -q -f $HOME/.ssh/dev.key -N "" \
    && echo `cat $HOME/.ssh/dev.key.pub` >> $HOME/.ssh/authorized_keys \
    && ssh-keygen -t rsa -q -f $HOME/.ssh/devp.key -N "phrase" \
    && echo `cat $HOME/.ssh/devp.key.pub` >> $HOME/.ssh/authorized_keys \
    && ssh-keyscan -t rsa localhost >> $HOME/.ssh/known_hosts \
    && echo $'service sshd start' > $HOME/.sshdrc \
    && echo $'service sshd start\neval `ssh-agent -s`\nssh-add $HOME/.ssh/dev.key' > $HOME/.sshrc

ONBUILD ENV LD_LIBRARY_PATH=/usr/local/lib:$LD_LIBRARY_PATH
ONBUILD ENV PATH=/home/mruby/code/bintest/tools:$PATH
ONBUILD WORKDIR /home/mruby/code
